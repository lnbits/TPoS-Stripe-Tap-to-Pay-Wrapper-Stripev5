<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/lnbits_bg">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="24dp"
        android:background="@color/lnbits_card"
        android:layout_gravity="center"
        android:elevation="4dp"
        android:layout_margin="20dp">

        <TextView
            android:id="@+id/title"
            android:text="LNbits TPoS wrapper"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="@color/lnbits_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <View
            android:layout_width="40dp"
            android:layout_height="3dp"
            android:background="@color/lnbits_orange"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="16dp" />

        <TextView
            android:id="@+id/desc1"
            android:text="This app allows you to scan a pairing link in the LNbits TPoS extension so your PoS can accept Tap to Pay payments."
            android:textColor="@color/lnbits_text"
            android:textSize="16sp"
            android:lineSpacingExtra="2dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/desc2"
            android:text="This requires the Stripe payment provider to be enabled and configured."
            android:textColor="@color/lnbits_muted"
            android:textSize="14sp"
            android:layout_marginTop="8dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/desc3"
            android:text="Configure the TPoS extension for Tap to Pay fiat payments, then click the Scan button:"
            android:textColor="@color/lnbits_text"
            android:textSize="14sp"
            android:layout_marginTop="16dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <Button
            android:id="@+id/btnScan"
            android:text="Scan Pairing Code"
            android:textAllCaps="false"
            android:textSize="16sp"
            android:layout_marginTop="16dp"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:backgroundTint="@color/lnbits_orange"
            android:textColor="#000000" />

        <Button
            android:id="@+id/btnContinue"
            android:text="Continue to saved POS"
            android:textAllCaps="false"
            android:textSize="16sp"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:backgroundTint="@color/lnbits_card"
            android:textColor="@color/lnbits_text"
            android:visibility="gone" />

        <Button
            android:id="@+id/btnSimulated"
            android:text="Simulated: ON"
            android:textAllCaps="false"
            android:textSize="14sp"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:backgroundTint="@color/lnbits_card"
            android:textColor="@color/lnbits_text" />

        <Button
            android:id="@+id/btnKioskMode"
            android:text="Kiosk mode: OFF"
            android:textAllCaps="false"
            android:textSize="14sp"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:backgroundTint="@color/lnbits_card"
            android:textColor="@color/lnbits_text" />

        <TextView
            android:id="@+id/tvSummary"
            android:text=""
            android:textColor="@color/lnbits_muted"
            android:textSize="12sp"
            android:layout_marginTop="12dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>
</FrameLayout>
